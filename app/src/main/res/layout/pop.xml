<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_video"
                android:layout_width="68dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_dashboard_video_24dp" />

            <TextView
                android:id="@+id/t_video"
                android:layout_width="68dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="视频" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_picture"
                android:layout_width="68dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_dashboard_picture_24dp" />

            <TextView
                android:id="@+id/t_picture"
                android:layout_width="68dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="图片" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_music"
                android:layout_width="68dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_dashboard_music_24dp" />

            <TextView
                android:id="@+id/t_music"
                android:layout_width="68dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="音乐" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_text"
                android:layout_width="68dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_dashboard_text_24dp" />

            <TextView
                android:id="@+id/t_text"
                android:layout_width="68dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="    文本" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>